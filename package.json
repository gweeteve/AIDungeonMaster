{
  "name": "aidungeonmaster",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for the AI Dungeon Master backend and frontend applications.",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace @aidungeonmaster/backend",
    "build:frontend": "npm run build --workspace @aidungeonmaster/frontend",
    "dev": "npm run dev --workspace @aidungeonmaster/frontend",
    "start": "npm run start --workspace @aidungeonmaster/backend",
    "start:dev": "npm run start:dev --workspace @aidungeonmaster/backend",
    "lint": "npm run lint --workspaces",
    "lint:backend": "npm run lint --workspace @aidungeonmaster/backend",
    "lint:frontend": "npm run lint --workspace @aidungeonmaster/frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace @aidungeonmaster/backend",
    "test:frontend": "npm run test --workspace @aidungeonmaster/frontend",
    "typecheck": "npm run type-check --workspace @aidungeonmaster/frontend"
  }
}
